{
  "name": "driver-service",
  "version": "1.0.0",
  "description": "Vendure Driver Management & Delivery Orchestration v1",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "quality": "./scripts/check-quality.sh",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "type-check": "tsc --noEmit --strict",
    "security": "npm audit --audit-level=critical",
    "deprecated": "npx depcheck",
    "audit:fix": "npm audit fix --only=prod",
    "compile:migrations": "tsc -p tsconfig.migrations.cjs.json",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run compile:migrations && node ./node_modules/typeorm/cli.js migration:run -d ./src/config/data-source.migration.cjs",
    "migration:generate": "npm run compile:migrations && node ./node_modules/typeorm/cli.js migration:generate -d ./src/config/data-source.migration.cjs",
    "migration:create": "node ./node_modules/typeorm/cli.js migration:create",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.13.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "ioredis": "^5.9.2",
    "nest-winston": "^1.10.2",
    "pg": "^8.11.5",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^10.0.0",
    "@types/compression": "^1.8.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.0"
  }
}
